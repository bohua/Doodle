form#rsda-xzjl-form.grid.doodle-form-sheet
	div.tab-control(data-role="tab-control", data-effect="fade")
		ul.tabs
			li.active
				a(href="#_page_rsda_master")
					i.icon-user
					span 基本信息
			li
				a(href="#_page_rsda_extra")
					i.icon-tag
					span 扩充信息
			li
				a(href="#_page_rsda_family")
					i.icon-home
					span 家庭
			li
				a(href="#_page_rsda_experience")
					i.icon-history
					span 经历
			li
				a(href="#_page_rsda_skill")
					i.icon-wrench
					span 技能
			li
				a(href="#_page_rsda_certificate")
					i.icon-copy
					span 证照


			div.place-right.rsda-xzjl-func-button
				a.hint--bottom(data-hint="清空", ng-mousedown="empty($event)")
					i.icon-remove

			div.place-right.rsda-xzjl-func-button
				a.hint--bottom(data-hint="保存", ng-mousedown="save($event)")
					i.icon-download


		div.frames
			div.frame#_page_rsda_master(ng-include="'/src/partials/rsda/xzjl/rsda-xzjl-view-master-frame.tpl.html'")
			div.frame#_page_rsda_extra(ng-include="'/src/partials/rsda/xzjl/rsda-xzjl-view-extra-frame.tpl.html'")
			div.frame#_page_rsda_family(ng-include="'/src/partials/rsda/xzjl/rsda-xzjl-view-family-frame.tpl.html'")
			div.frame#_page_rsda_experience(ng-include="'/src/partials/rsda/xzjl/rsda-xzjl-view-experience-frame.tpl.html'")
			div.frame#_page_rsda_skill(ng-include="'/src/partials/rsda/xzjl/rsda-xzjl-view-skill-frame.tpl.html'")
			div.frame#_page_rsda_certificate(ng-include="'/src/partials/rsda/xzjl/rsda-xzjl-view-certificate-frame.tpl.html'")
